{
  "name": "gestor-tienda-pro-backend",
  "version": "1.0.0",
  "description": "Backend SQLite API REST para Gestor Tienda Pro",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-database.js",
    "seed-demo": "node scripts/seed-sample-data.js",
    "migrate": "node scripts/migrate-from-localstorage.js",
    "backup": "node scripts/backup.js",
    "catalogo:unificar": "node scripts/unificar-catalogo-tecnico.js",
    "test": "jest",
    "lint": "eslint .. --ext .js,.cjs,.mjs",
    "lint:styles": "stylelint \"../**/*.css\" --config ../stylelint.config.js --ignore-path ../.stylelintignore",
    "format": "prettier \"../\" --write --config ../.prettierrc.json --ignore-path ../.prettierignore",
    "format:check": "prettier \"../\" --check --config ../.prettierrc.json --ignore-path ../.prettierignore",
    "qa": "npm run lint && npm run lint:styles && npm test"
  },
  "keywords": [
    "pos",
    "inventory",
    "sales",
    "sqlite",
    "rest-api"
  ],
  "author": "Gestor Tienda Pro Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@xmldom/xmldom": "^0.8.11",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^3.11.174",
    "pdfkit": "^0.17.2",
    "pdfreader": "^3.0.0",
    "qrcode": "^1.5.4",
    "soap": "^1.6.0",
    "undici": "^6.19.6",
    "uuid": "^9.0.1",
    "xmlbuilder2": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
